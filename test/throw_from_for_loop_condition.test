class Exception {
    fun __init__(self, what) {
        self.what = what;
    }
}
fun initialise(i) {
    print "Initialise " + to_string(i);
    return i;
}
fun condition(i) {
    throw new Exception("Thrown from condition, i = " + to_string(i));
    print "Condition " + to_string(i);
    return i < 10;
}
fun increment(i) {
    print "Increment " + to_string(i);
    return i + 1;
}
try {
    for (var i = initialise(0); condition(i); i = increment(i)) {
        print "Body " + to_string(i);
    }
} catch (e) {
    print e.what;
}
