fun tree(height) {
  fun repeat(str, n) {
    var result = "";
    for (var i = 0; i < n; i = i + 1)
      result = result + str;
    return result;
  }

  for (var i = 0; i < height; i = i + 1) {
    var spacing = repeat(".", height - i);
    var line = ""
      + spacing
      + repeat("*", i * 2)
      + spacing;
    print line;
  }
}

tree(100);