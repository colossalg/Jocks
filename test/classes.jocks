class Person {
  fun __init__(self, f_name, l_name) {
    self.f_name = f_name;
    self.l_name = l_name;
  }

  fun greet(self) {
    print "Hello there " + self.f_name + " " + self.l_name + "!";
  }
}

class Student < Person {
  fun __init__(self, f_name, l_name, id) {
    super.__init__(self, f_name, l_name);
    self.id = id;
  }

  fun greet(self) {
    super.greet(self);
    print "Your student ID is " + self.id + ", have a great semester.";
  }
}

var p = new Student("Angus", "Wylie", "21962446");
p.greet();

p.height = "2m";
print p.f_name + "'s height is " + p.height;